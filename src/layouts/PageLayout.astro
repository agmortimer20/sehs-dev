---
    import "../styles/global.scss";
    
    import Navbar from '../components/Navbar.astro'

    let { 
        title = "",
        container = "",
        content = {},
        navMargin = "3"
    } = Astro.props
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{content.title ? content.title : title} | SEHS.dev</title>
    <script>
        import "../scripts/prism.js";
    </script>
</head>
<body class="line-numbers match-braces">
    <Navbar margin={navMargin} client:load />
    <div class={content.container ? content.container : container}>
        <slot/>
    </div>

    <footer class="py-3 mt-4 bg-dark">
        <p class="text-center text-light">
            <span 
                style="display: inline-block; transform: rotate(180deg);"
            >
                &copy;
            </span>
            Copyleft 2021 Anthony Mortimer
        </p>
    </footer>
</body>
</html>